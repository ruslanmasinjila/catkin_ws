<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="uflite_gripper">
  <xacro:macro name="uflite_gripper_urdf" params="prefix:='' attach_to:='' attach_xyz:='0 0 0' attach_rpy:='0 0 0' ">
    
    <xacro:unless value="${attach_to == ''}">
      <joint name="${prefix}gripper_fix" type="fixed">
        <parent link="${attach_to}"/>
        <child link="${prefix}omx_gripper_base_link"/>
        <origin xyz="${attach_xyz}" rpy="${attach_rpy}"/>
      </joint>
    </xacro:unless>
    
    <!--########################### OMX Gripper Base ###########################-->
    <link name="${prefix}omx_gripper_base_link">
      <!--
      <inertial>
        <origin xyz="0.0 0.0 0.030" rpy="0 0 0" />
        <mass value="0.28" />
        <inertia
          ixx="0.00047106" ixy="3.9292E-07" ixz="2.6537E-06"
          iyy="0.00033072" iyz="-1.0975E-05" izz="0.00025642" />
      </inertial>
     -->
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/omx_gripper_base"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}White" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/omx_gripper_base"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
    </link>
    
    <!--########################### OMX Gripper Left Palm ###########################-->
    
    <link name="${prefix}omx_gripper_left_link">
      <!--
      <inertial>
        <origin xyz="0.0 0.0 0.030" rpy="0 0 0" />
        <mass value="0.28" />
        <inertia
          ixx="0.00047106" ixy="3.9292E-07" ixz="2.6537E-06"
          iyy="0.00033072" iyz="-1.0975E-05" izz="0.00025642" />
      </inertial>
     -->
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/oxm_gripper_left_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}Red" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/oxm_gripper_left_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
    </link>
    
    <joint name="${prefix}omx_gripper_left_joint" type="prismatic">
      <parent link="${prefix}omx_gripper_base_link"/>
      <child link="${prefix}omx_gripper_left_link"/>
      <origin xyz="0.0817 0.021 0.0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
      <dynamics damping="0.1"/>
    </joint>
    
    <!--########################### OMX GRipper Right Palm ###########################-->
    
    <link name="${prefix}omx_gripper_right_link">
      <!--
      <inertial>
        <origin xyz="0.0 0.0 0.030" rpy="0 0 0" />
        <mass value="0.28" />
        <inertia
          ixx="0.00047106" ixy="3.9292E-07" ixz="2.6537E-06"
          iyy="0.00033072" iyz="-1.0975E-05" izz="0.00025642" />
      </inertial>
     -->
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/oxm_gripper_right_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}Black" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/oxm_gripper_right_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
    </link>
    
    <joint name="${prefix}omx_gripper_right_joint" type="prismatic">
      <parent link="${prefix}omx_gripper_base_link"/>
      <child link="${prefix}omx_gripper_right_link"/>
      <origin xyz="0.0817 0.021 0.0" rpy="0 0 0"/>
      <axis xyz="0 -11 0"/>
      <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
      <dynamics damping="0.1"/>
    </joint>

    <link name="${prefix}link_tcp" />

    <joint name="${prefix}joint_tcp" type="fixed">
      <origin xyz="0 0 0.0836" rpy="0 0 0" />
      <parent link="${prefix}omx_gripper_base_link" />
      <child link="${prefix}link_tcp" />
    </joint>

  </xacro:macro>

</robot>
