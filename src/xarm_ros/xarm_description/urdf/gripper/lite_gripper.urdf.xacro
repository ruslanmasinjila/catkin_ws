<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="uflite_gripper">
  <xacro:macro name="uflite_gripper_urdf" params="prefix:='' attach_to:='' attach_xyz:='0 0 0' attach_rpy:='0 0 0' ">
    
    <xacro:unless value="${attach_to == ''}">
      <joint name="${prefix}gripper_fix" type="fixed">
        <parent link="${attach_to}"/>
        <child link="${prefix}uflite_gripper_link"/>
        <origin xyz="${attach_xyz}" rpy="${attach_rpy}"/>
      </joint>
    </xacro:unless>
    
    <link name="${prefix}uflite_gripper_link">
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/gripper_lite"
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}White" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/gripper_lite"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
        
       <inertial>
        <origin xyz="4.4206755e-02 3.6839985e-07 8.9142216e-03" />
        <mass value="1.4327573e-01" />
        <inertia ixx="8.0870749e-05" ixy="0.0" ixz="-1.0157896e-06"
                 iyy="7.5980465e-05" iyz="0.0"
                 izz="9.3127351e-05" />
      </inertial>
      
    </link>
    
    <joint name="${prefix}gripper_left_joint" type="prismatic">
      <parent link="${prefix}uflite_gripper_link"/>
      <child link="${prefix}gripper_left_link"/>
      <origin xyz="0.0817 0.021 0.0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
      <dynamics damping="0.1"/>
    </joint>
    
    
    <link name="${prefix}gripper_left_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1.0e-03" />
        <inertia
          ixx="1.0e-06" ixy="0.0" ixz="0.0"
          iyy="1.0e-06" iyz="0.0" izz="1.0e-06" />
      </inertial>
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/gripper_left_palm"
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}White" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/gripper_left_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
           
    </link>
    
    
    <joint name="${prefix}gripper_right_joint" type="prismatic">
      <parent link="${prefix}uflite_gripper_link"/>
      <child link="${prefix}gripper_right_link"/>
      <origin xyz="0.0817 0.021 0.0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
      <dynamics damping="0.1"/>
    </joint>
    
     <link name="${prefix}gripper_right_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1.0e-03" />
        <inertia
          ixx="1.0e-06" ixy="0.0" ixz="0.0"
          iyy="1.0e-06" iyz="0.0" izz="1.0e-06" />
      </inertial>
      <xacro:common_link_visual 
        mesh_filename="gripper/lite/visual/gripper_right_palm"
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0"
        material_name="${prefix}White" />
      <xacro:common_link_collision 
        mesh_filename="gripper/lite/collision/gripper_right_palm"  
        origin_xyz="0 0 0" 
        origin_rpy="0 0 0" />
           
    </link>
    

    <link name="${prefix}link_tcp" />

    <joint name="${prefix}joint_tcp" type="fixed">
      <origin xyz="0 0 0.0836" rpy="0 0 0" />
      <parent link="${prefix}uflite_gripper_link" />
      <child link="${prefix}link_tcp" />
    </joint>

  </xacro:macro>

</robot>
